<div class="container-index">
  <div class="container container-index-company">
    <h2 id="title-device">Inscription Comptable</h2>

    <%= simple_form_for @accountant, url: new_accountant_path, methode: :post do |f| %>

      <div class="form-inputs">
        <%= f.input :name,
                    label: "Nom"%>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "S'inscrire", class: "btn btn-primary button-recherche" %>
      </div>
    <% end %>
  </div>
</div>
