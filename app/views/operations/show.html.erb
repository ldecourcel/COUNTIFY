<%= link_to "Retour", company_operations_path(@company)  %>

<div class="container-ope-show-title">
  <h1><%= @operation.account.company.name %> ></h1>
  <h2><em>Operation</em> </h2>
</div>

<div class="container-index-operation">
  <table>
    <thead>
      <tr>
        <th class="th-sm"><strong>Montant</strong></th>
        <th class="th-sm">Description</th>
        <th class="th-sm">Date</th>
        <th class="th-sm">Status</th>
      </tr>
    </thead>
    <tbody>
      <div class="link">
        <tr>
          <td><strong><%= @operation.amount %></strong></td>
          <td id="description"><%= @operation.details %></td>
          <td><%= @operation.date %></td>
          <% if @operation.validated == true %>
            <td><%= image_tag("checked.png") %></td>
          <% elsif @operation.invoice != nil && @operation.validated == false %>
            <td><%= image_tag("question.png") %></td>
          <% elsif @operation.validated == false %>
            <td><%= image_tag("error.png") %></td>
          <% end %>
        </tr>
      </div>
    </tbody>
  </table>

  <% if @operation.validated == true %>
    <%= @operation.invoice.date %>
    <%= @operation.invoice.total_amount %>
    <%= @operation.invoice.issuer %>

  <% elsif @operation.invoice != nil && @operation.validated == false %>
    <div id="carouselOfInvoices" class="carousel slide" data-interval="false">
      <ol class="carousel-indicators">
        <li data-target="#carouselOfInvoices" data-slide-to="0" class="active"></li>
        <li data-target="#carouselOfInvoices" data-slide-to="1"></li>
        <li data-target="#carouselOfInvoices" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="..." alt="First slide">
          <%= @operation.invoice.date %>
          <%= @operation.invoice.total_amount %>
          <%= @operation.invoice.issuer %>
          <%= link_to "Réconcilier", operation_path(@operation, invoice: @operation.invoice.id), method: :patch %>
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="..." alt="Second slide">
          <%= @invoices_to_display[1][0].date %>
          <%= @invoices_to_display[1][0].total_amount %>
          <%= @invoices_to_display[1][0].issuer %>
          <%= link_to "Réconcilier", operation_path(@operation, invoice: @invoices_to_display[1][0].id), method: :patch %>

        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="..." alt="Third slide">
          <%= @invoices_to_display[2][0].date %>
          <%= @invoices_to_display[2][0].total_amount %>
          <%= @invoices_to_display[2][0].issuer %>
          <%= link_to "Réconcilier", operation_path(@operation, invoice: @invoices_to_display[2][0].id), method: :patch %>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselOfInvoices" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselOfInvoices" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>


  <% elsif @operation.validated == false %>
    <div id="carouselOfInvoices" class="carousel slide" data-interval="false">
      <ol class="carousel-indicators">
        <li data-target="#carouselOfInvoices" data-slide-to="0" class="active"></li>
        <li data-target="#carouselOfInvoices" data-slide-to="1"></li>
        <li data-target="#carouselOfInvoices" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          
          <img class="d-block w-100" src="..." alt="First slide">
          <%= @invoices_to_display[0][0].date %>
          <%= @invoices_to_display[0][0].total_amount %>
          <%= @invoices_to_display[0][0].issuer %>
          <%= link_to "Réconcilier", operation_path(@operation, invoice: @invoices_to_display[0][0].id), method: :patch %>
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="..." alt="Second slide">
          <%= @invoices_to_display[1][0].date %>
          <%= @invoices_to_display[1][0].total_amount %>
          <%= @invoices_to_display[1][0].issuer %>
          <%= link_to "Réconcilier", operation_path(@operation, invoice: @invoices_to_display[1][0].id), method: :patch %>
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="..." alt="Third slide">
          <%= @invoices_to_display[2][0].date %>
          <%= @invoices_to_display[2][0].total_amount %>
          <%= @invoices_to_display[2][0].issuer %>
          <%= link_to "Réconcilier", operation_path(@operation, invoice: @invoices_to_display[2][0].id), method: :patch %>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselOfInvoices" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselOfInvoices" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

  <% end %>



</div>