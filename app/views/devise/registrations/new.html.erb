<div class="container-index">
  <div class="container container-index-company">
    <h2 id="title-device">Inscription</h2>

  <% if params["param"][0] == "comptable"%>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :last_name,
                    label: "Nom de Fam",
                    required: true,
                    input_html: { autocomplete: "nom-fam" } %>
        <%= f.input :first_name,
                    label: "Prénom",
                    required: true,
                    input_html: { autocomplete: "prenom" } %>
        <%= f.input :email,
                    label: "Adresse e-mail",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                    label: "Mot de passe",
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: "Confirmation du mot de passe",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.hidden_field :accountant_id,
                    value: params["param"][1].to_i %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "S'inscrire", class: "btn btn-primary button-recherche"  %>
      </div>
    <% end %>

    <% else %>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :last_name,
                      label: "Nom de Fam",
                      required: true,
                      input_html: { autocomplete: "nom-fam" } %>
          <%= f.input :first_name,
                      label: "Prénom",
                      required: true,
                      input_html: { autocomplete: "prenom" } %>
          <%= f.input :email,
                      label: "Adresse e-mail",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      label: "Mot de passe",
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      label: "Confirmation du mot de passe",
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.hidden_field :company_id,
                      value: params["param"][1].to_i  %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "S'inscrire", class: "btn btn-primary button-recherche"  %>
        </div>
      <% end %>

    <% end %>
    <div class="button-device">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

