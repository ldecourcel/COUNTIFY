<!DOCTYPE html>
<html>
  <head>
    <title>COUNTIFY</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

  </head>

  <body class="body-background">
    <% if !user_signed_in? %>
      <%= render 'shared/navbar' %>
    <% elsif user_signed_in? && current_user.accountant_id? %>
      <%= render 'shared/navbar-accountant' %>
    <% elsif user_signed_in? && current_user.company_id? %>
      <%= render 'shared/navbar-company' %>
    <% end %>

    <%= render 'shared/flashes' %>

    <%= yield %>
    <%= render 'shared/footer' %>
  </body>
</html>
