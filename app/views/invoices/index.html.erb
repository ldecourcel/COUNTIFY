<div class="big-container">
  <div class="container-index-operations">
    <div class="container-operations-general">
      <h1><%= @company.name %><h1>
      <div class="operation-search">
          <%= form_tag company_operations_path(@company), class: "form-index-operation",method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Rechercher"
          %>
          <%= submit_tag "Recherche", class: "btn btn-primary button-recherche" %>
          <% end %>
      </div>
    </div>

    <div class="container-table-operations">
      <h2 class="center">Justificatifs</h2>
      <div class="container-btn-add-ope">
        <%= link_to raw('<i class="fas fa-plus-circle"></i> Ajouter un justificatif'), new_company_invoice_path(@company), id: "btn-add-ope" %>
      </div>
      <table>
        <thead>
          <tr>
            <th>Montant HT (€)</th>
            <th>Montant TTC (€)</th>
            <th>TVA (%)</th>
            <th>Date</th>
            <th>Bénéficiaire</th>
            <th>Client</th>
          </tr>
        </thead>
        <tbody>
          <% @invoices.each do |invoice| %>

              <tr onclick="window.location='/invoices/<%= invoice.id %>';">
                <td><%= invoice.net_amount %></td>
                <td><%= invoice.tax_amount + invoice.net_amount %></td>
                <td><%= invoice.vta %></td>
                <td><%= invoice.date %></td>
                <td><%= invoice.issuer%></td>
                <td><%= invoice.client %></td>
              </tr>

          <% end %>
        </tbody>

      </table>
    </div>

  </div>
</div>
