<%= link_to "Retour", companies_path  %>
<div class="container-index-operation">
  <h1><%= @company.name %><h1>

  <h2 class="center">Factures</h2>

  <div class="container-btn-add-ope">
      <%= link_to raw('<i class="fas fa-plus-circle"></i> Ajouter une facture'), new_company_invoice_path(@company), id: "btn-add-ope" %>
  </div>

  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Bénéficiaire</th>
        <th>Client</th>
        <th>Montant (€)</th>
      </tr>
    </thead>
    <tbody>
      <% @invoices.each do |invoice| %>

          <tr onclick="window.location='/invoices/<%= invoice.id %>';">
            <td><%= invoice.date %></td>
            <td><%= invoice.issuer%></td>
            <td> <%= invoice.client %></td>
            <td><%= invoice.net_amount %></td>
          </tr>

      <% end %>
    </tbody>

  </table>
</div>
