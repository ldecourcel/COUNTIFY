<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "Countify", root_path, class: "navbar-brand"%>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in?%>
        <% unless controller_name == "companies" && action_name == "index" || controller_name == "pages" %>
          <li class="nav-item active">
          <div class="navbar-logo">
            <%= link_to image_tag("group.png"), companies_path, class: "nav-link" %>
            <p>Mes clients</p>
            </div>
          </li>
          <li class="nav-item">
          <div class="navbar-logo">
            <%= link_to image_tag("info.png"), company_path(@company), class: "nav-link" %>
            <p>Informations client</p>
            </div>
          </li>
          <li class="nav-item<%" active" if controller_name == "operations" && action_name == "index" %>">
          <div class="navbar-logo">
            <%= link_to image_tag("euro.png"), company_operations_path(@company), class: "nav-link" %>
            <p>Transactions</p>
            </div>
          </li>
          <li class="nav-item">
          <div class="navbar-logo">
            <%= link_to image_tag("invoice.png"), company_invoices_path(@company), class: "nav-link" %>
            <p>Justificatifs</p>
            </div>
          </li>
          <li class="nav-item">
          <div class="navbar-logo">
            <%= link_to image_tag("archive.png"), "#", class: "nav-link" %>
            <p>Historique</p>
          </div>

          </li>
          <li class="nav-item">
            <%= link_to "Chat", "#", class: "nav-link" %>
          </li>
        <% end %>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <%else%>
            <%= content_tag :div, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false do %>
              <p><%= current_user.initials %></p>
            <% end %>
          <%end%>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Mes clients", companies_path, class: "dropdown-item" %>
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Se connecter", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
